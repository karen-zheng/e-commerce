{% block body %}
<form action="/payment" method="post" >
    <div class="container">
        <div class="row">
            <div class="col-md-6" id="billingInformation">
                <p>first name <input class="firstName" type="text"></p>
                <p>last name <input class="lastName" type="text"></p>
                <p>company name <input class="company" type="text"></p>
                <p>email address <input class="email" type="email"></p>
