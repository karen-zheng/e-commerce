{% extends "index.njk" %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% for item in items %}
            <div class="col-md-4 col-sm-6">
                <div class="itemImage">
                    <a href="/items/{{item.name}}">
                        <img src="{{item.image}}">
                        <p class="hiddenName">{{ item.name }}</p>
                    </a>

                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="/resultsScript.js"></script>
{% endblock %}