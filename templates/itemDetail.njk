{% extends "index.njk" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6" id="itemImage">
                <img src="{{item.image}}">
            </div>
            <div class="col-md-6" id="itemDescription">
                <h4 class="itemName">{{ item.name }}</h4>
                <p>{{ item.description }}</p>
                <p class="price">{{ item.price }}</p>
                <!--<a href="/cart/{{item.name}}">

                </a>-->
                <button id="addItem">Add to cart</button>
            </div>
        </div>
    </div>
{% endblock %}


