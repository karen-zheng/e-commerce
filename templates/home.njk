{% extends "index.njk" %}

{% block body %}
    <div class="showPopup" data-result = "{{paymentResult}}">
        <p>Payment successful. Thank you for shopping with us.</p>
    </div>

    <div class="heroImage">
        <a class="ghost LinkHero" href="/collection/on the same boat">&nbspshop collections&nbsp</a>
        <a class="previousLink" href=""></a>
        <img class="imageShow" id="firstHero" src="images/Hero1.jpg" alt="first hero">
        <img class="imageHidden" id="secondHero" src="images/Hero2.jpg" alt="second hero">
        <img class="imageHidden" id="thirdHero" src="images/Hero3.jpg" alt="third hero">
        <img class="imageHidden" id="fourthHero" src="images/Hero4.jpg" alt="fourth hero">
        <a class="nextLink" href="#"></a>

    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    new spring summer collection
                </h1>
                <footer>Reignite your outfit with a fresh look this season.</footer>
            </div>
        </div>
        <div class="row">
            <div class="feature feature1">
                <div class="col-md-4">
                    <div class="collectionDes">
                        <h1>A touch of nature</h1>
                        <footer>Luxurious natural materials meets precious metals.</footer>
                        <a class="ghost linkFeatured" href="/collection/a touch of leather">&nbspexplore&nbsp</a>
                    </div>
                </div>
                <div class="col-md-2" >
                    <div class="collectionItem">
                        <img src="images/leatherbeigebracelet.jpg">
                        <p class="hiddenName">Adjustable leather bracelet</p>
                    </div>
                </div>
                <div class="col-md-6" >
                    <div class="collectionImage" >
                        <img src="images/DS3.jpg">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="feature feature2">
                <div class="col-md-2" >
                    <div class="collectionItem">
                        <img src="images/irishDancerPendant.jpg">
                        <p class="hiddenName">Irish dancer pendant</p>
                    </div>
                </div>
                <div class="col-md-6" >
                    <div class="collectionImage" >
                        <img src="images/DS4.jpg">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="collectionDes">
                        <h1>The stars</h1>
                        <footer>Celebrate your uniqueness and successes</footer>
                        <a class="ghost linkFeatured" href="/collection/the stars">&nbspexplore&nbsp</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="feature feature3">
                <div class="col-md-4">
                    <div class="collectionDes">
                        <h1>On the same boat</h1>
                        <footer>A soft romantic collection.</footer>
                        <a class="ghost linkFeatured" href="/collection/on the same boat">&nbspexplore&nbsp</a>
                    </div>
                </div>
                <div class="col-md-2" >
                    <div class="collectionItem">
                        <img src="images/boatWithLilyPendant.jpg">
                        <p class="hiddenName">Boat with lily pendant</p>
                    </div>
                </div>
                <div class="col-md-6" >
                    <div class="collectionImage" >
                        <img src="images/DS2.jpg">
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="/homeScript.js"></script>
{% endblock %}